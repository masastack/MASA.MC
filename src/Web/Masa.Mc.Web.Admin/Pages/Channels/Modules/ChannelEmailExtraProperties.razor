@inherits AdminCompontentBase
<MRow>
    <MCol>
        <MTextField @bind-Value="_model.UserName"
                    Label="@T("EmailChannelOptions:UserName")"
                    Dense
                    Outlined
                    HideDetails="@("auto")"
                    TValue="string"
                    OnChange="HandleChangeAsync" />
    </MCol>
    <MCol>
        <MTextField @bind-Value="_model.Password"
                    Label="@T("EmailChannelOptions:Password")"
                    Dense
                    Outlined
                    HideDetails="@("auto")"
                    TValue="string"
                    OnChange="HandleChangeAsync" />
    </MCol>
</MRow>
<MRow Justify="JustifyTypes.Start">
    <MCol Md="6">
        <MTextField @bind-Value="_model.Smtp"
                    Label="@T("EmailChannelOptions:Smtp")"
                    Dense
                    Outlined
                    HideDetails="@("auto")"
                    TValue="string"
                    OnChange="HandleChangeAsync" />
    </MCol>
    <MCol Md="1">
        <MCheckbox Class="mt-1" @bind-Value="_model.Ssl" Label="@T("EmailChannelOptions:Ssl")" OnChange="HandleChangeAsync"></MCheckbox>
    </MCol>
    <MCol Md="2">
        <MTextField @bind-Value="_model.Port"
                    Type="number"
                    Label="@T("EmailChannelOptions:Port")"
                    Dense
                    Outlined
                    HideDetails="@("auto")"
                    TValue="int"
                    OnChange="HandleChangeAsync" />
    </MCol>
</MRow>