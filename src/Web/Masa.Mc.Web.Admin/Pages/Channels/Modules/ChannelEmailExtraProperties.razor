@inherits AdminCompontentBase
<MForm Model="_model" @ref="Form" EnableValidation>
    <MRow Class="mt-6">
        <MCol>
            <DefaultTextField @bind-Value="_model.UserName"
                              Label="@T("EmailChannelOptions.UserName")">
            </DefaultTextField>
        </MCol>
        <MCol>
            <DefaultTextField @bind-Value="_model.Password"
                              Label="@T("EmailChannelOptions.Password")">
            </DefaultTextField>
        </MCol>
    </MRow>
    <MRow Class="mt-6">
        <MCol>
            <DefaultTextField @bind-Value="_model.Smtp"
                              Label="@T("EmailChannelOptions.Smtp")">
            </DefaultTextField>
        </MCol>
        <MCol>
            <MRow Class="pl-3">
                <MCol Style="border: 1px solid #E2E7F4;border-radius: 8px;height: 48px;margin-top: 12px;padding-top: 4px;"><MCheckbox Dense @bind-Value="_model.Ssl" Label="@T("EmailChannelOptions.Ssl")" OnChange="HandleChangeAsync"></MCheckbox></MCol>
                <MCol>
                    <DefaultTextField @bind-Value="_model.Port"
                                      Label="@T("EmailChannelOptions.Port")">
                    </DefaultTextField>
                </MCol>
            </MRow>
        </MCol>
    </MRow>
</MForm>