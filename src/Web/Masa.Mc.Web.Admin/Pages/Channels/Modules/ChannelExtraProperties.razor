@inherits AdminCompontentBase

@if (Type == ChannelTypes.Email)
{
    <ChannelEmailExtraProperties @ref="_emailExtraPropertiesRef" @bind-Value="Value" PasswordView="PasswordView" />
}
else if (Type == ChannelTypes.Sms)
{
    <ChannelSmsExtraProperties @ref="_smsExtraPropertiesRef" @bind-Value="Value" PasswordView="PasswordView" />
}
else if (Type == ChannelTypes.App)
{
    <ChannelAppExtraProperties @ref="_appExtraPropertiesRef" @bind-Value="Value" PasswordView="PasswordView" IsAdd="IsAdd" />
}
else if (Type == ChannelTypes.WeixinWork)
{
    <ChannelWeixinWorkExtraProperties @ref="_weixinWorkExtraPropertiesRef" @bind-Value="Value" PasswordView="PasswordView"/>
}