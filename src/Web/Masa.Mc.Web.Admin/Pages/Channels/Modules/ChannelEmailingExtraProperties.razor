@inherits AdminCompontentBase
<MRow>
    <MCol Md="6">
        <MTextField @bind-Value="_model.UserName"
                    Label="@T("ChannelMailingOptions:UserName")"
                    Dense
                    Outlined
                    HideDetails="@("auto")"
                    TValue="string"
                    OnChange="HandleChangeAsync"/>
    </MCol>
    <MCol Md="6">
        <MTextField @bind-Value="_model.Password"
                    Label="@T("ChannelMailingOptions:Password")"
                    Dense
                    Outlined
                    HideDetails="@("auto")"
                    TValue="string"
                    OnChange="HandleChangeAsync"/>
    </MCol>
</MRow>
<MRow>
    <MCol Md="6">
        <MTextField @bind-Value="_model.Smtp"
                    Label="@T("ChannelMailingOptions:Smtp")"
                    Dense
                    Outlined
                    HideDetails="@("auto")"
                    TValue="string"
                    OnChange="HandleChangeAsync"/>
    </MCol>
    <MCol Md="2">
        <MCheckbox  @bind-Value="_model.SSL" Label="@T("ChannelMailingOptions:SSL")" OnChange="HandleChangeAsync"></MCheckbox >
    </MCol>
    <MCol Md="4">
        <MTextField @bind-Value="_model.Port"
                    Type="number"
                    Label="@T("ChannelMailingOptions:Port")"
                    Dense
                    Outlined
                    HideDetails="@("auto")"
                    TValue="int"
                    OnChange="HandleChangeAsync"/>
    </MCol>
</MRow>