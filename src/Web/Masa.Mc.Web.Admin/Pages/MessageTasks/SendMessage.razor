@inherits AdminCompontentBase
@page "/messageTasks/sendMessage"
<MCard Class="full-height">
    <MCardText Class="full-height" Style="overflow-y:auto;">
        <MContainer Class="full-height">
            <MRow Class="full-height" Align="AlignTypes.Center" Justify="JustifyTypes.Center">
                <MCol Cols="3">
                    <MCard Outlined Class="d-flex justify-center align-center" Style="border-style: dashed;" Height="500">
                        <MButton Ripple=false Plain OnClick="_ordinaryCreateModal.OpenModalAsync"><MIcon Left>mdi-plus</MIcon>@T("DisplayName.MessageEntityType.Ordinary")</MButton>
                    </MCard>
                </MCol>
                <MCol Cols="3" Offset="1">
                    <MCard Outlined Class="d-flex justify-center align-center" Style="border-style: dashed;" Height="500">
                        <MButton Ripple=false Plain OnClick="_templateCreateModal.OpenModalAsync"><MIcon Left>mdi-plus</MIcon>@T("DisplayName.MessageEntityType.Template")</MButton>
                    </MCard>
                </MCol>
            </MRow>
        </MContainer>
    </MCardText>
</MCard>
<OrdinaryMessageCreateModal @ref="_ordinaryCreateModal"/>
<TemplateMessageCreateModal @ref="_templateCreateModal"/>
