@inherits AdminCompontentBase
<div class="@CssProvider.GetClass()" style="@CssProvider.GetStyle()" id="@Id" @ref="Ref" @attributes="Attributes">
    <div class="subtitle2 emphasis2--text">@T("DisplayName.VariableValueTransfer")</div>
    <MRow Class="row-box">
        @foreach (var item in _items)
        {
            <MCol Md="6">
                <STextField @bind-Value="item.Value"
                        Label="@item.Name"
                        Disabled="ReadOnly"
                        Clearable="!ReadOnly"
                        TValue="string"
                        OnChange="HandleChangeAsync"></STextField>
            </MCol>
        }
    </MRow>
</div>