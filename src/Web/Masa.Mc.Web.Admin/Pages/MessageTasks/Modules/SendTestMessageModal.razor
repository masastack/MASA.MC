@inherits AdminCompontentBase
<div @ref="Ref">
    <PModal @bind-Value="_visible"
            Persistent
            Title="@T("Permission.TestMessageTask")"
            HideCancelAction
            Width="684"
            FormModel="_input"
            OnSave="HandleOkAsync"
            OnCancel="HandleCancel">
        <ChildContent>
            <MessageTaskReceiverAutoComplete @ref="_subjectRef" Value="_userIds" Type="MessageTaskReceiverTypes.User" ValueChanged="HandleUserChange"></MessageTaskReceiverAutoComplete>
            <MInput @bind-Value="_input.Receivers" />
        </ChildContent>
        <SaveContent Context="save">
            <MButton Width=100 Class="rounded-pill" Color="primary" Style="float:right;" OnClick="save.Click">@(T("Send"))</MButton>
        </SaveContent>
    </PModal>
</div>
