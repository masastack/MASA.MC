@inherits AdminCompontentBase
<MRow Class="mx-1 pt-6" Justify="JustifyTypes.Start">
    <MCheckbox @bind-Value="Value.IsSendingInterval" Disabled="ReadOnly"></MCheckbox>
    <span class="pt-4">@T("Each")</span>
    <MTextField @bind-Value="Value.SendingInterval"
                Outlined
                Disabled="ReadOnly"
                Class="mx-1"
                Type="number">
    </MTextField>
    <span class="pt-4">@T("Second")，@T("Send")</span>
    <MTextField @bind-Value="Value.SendingCount"
                Outlined
                Disabled="ReadOnly"
                Class="mx-1"
                Type="number">
    </MTextField>
    <span class="pt-4">@T("Unit.Bar")</span>
</MRow>
<MRow Class="mx-1 pt-6" Justify="JustifyTypes.Start">
    <MCheckbox Class="mt-1" @bind-Value="Value.IsTiming" Disabled="ReadOnly"></MCheckbox>
    <span class="pt-2">@T("DisplayName.SendingRule.IsTiming")</span>
    <MMenu @bind-Value="_datePickersShow"
           CloseOnContentClick="false"
           NudgeRight="40"
           Transition="scale-transition"
           OffsetY
           MinWidth="@("auto")">
        <ActivatorContent>
            <MTextField @bind-Value="_sendingDate"
                        PrependInnerIcon="mdi-calendar"
                        Outlined
                        Disabled="ReadOnly"
                        Class="mx-1"
                        HideDetails="@("auto")"
                        @attributes="context.Attrs"></MTextField>
        </ActivatorContent>
        <ChildContent>
            <MDatePicker @bind-Value="_sendingDate"
                         OnInput="HandleDatePickerInputAsync"></MDatePicker>
        </ChildContent>
    </MMenu>
    <MMenu @bind-Value="_timePickersShow"
           CloseOnContentClick="false"
           NudgeRight="40"
           Transition="scale-transition"
           OffsetY
           MaxWidth="290"
           MinWidth="290">
        <ActivatorContent>
            <MTextField @bind-Value="_sendingTime"
                        PrependInnerIcon="mdi-clock-time-four-outline"
                        Outlined
                        Disabled="ReadOnly"
                        Class="mx-1"
                        HideDetails="@("auto")"
                        @attributes="context.Attrs"></MTextField>
        </ActivatorContent>
        <ChildContent>
            @if (_timePickersShow)
            {
                <MTimePicker @bind-Value="_sendingTime"
                         OnChange="HandleTimePickerChangeAsync"
                         FullWidth></MTimePicker>
            }
        </ChildContent>
    </MMenu>
</MRow>