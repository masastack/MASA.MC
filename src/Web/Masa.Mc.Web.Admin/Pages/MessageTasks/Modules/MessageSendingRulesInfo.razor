@inherits AdminCompontentBase
@if (Value.IsCustom)
{
    <dl class="mt-8">
        <dt class="overline regular3--text">@T("DisplayName.SendingRule.CronExpression")</dt>
        <dd class="body2 emphasis2--text mt-1">@Value.CronExpression</dd>
    </dl>
}
@if (Value.SendingCount>0)
{
    <dl class="mt-8">
        <dt class="overline regular3--text">@T("DisplayName.SendingRule.SendingCount")</dt>
        <dd class="body2 emphasis2--text mt-1">@Value.SendingCount</dd>
    </dl>
}


@code {
    [Parameter]
    public SendRuleDto Value { get; set; } = new();
}
