@inherits AdminCompontentBase
<MRadioGroup Class="mt-6 ml-2" Color="green" Value="SelectReceiverType" ValueChanged="SelectReceiverTypeChanged"
             Row>
    <MRadio Label="@T("ManualSelection")" Color="green"
            Value="@MessageTaskSelectReceiverTypes.ManualSelection">
    </MRadio>
    <MRadio Label="@T("BatchUpload")" Color="green"
            Value="@MessageTaskSelectReceiverTypes.BatchUpload">
    </MRadio>
</MRadioGroup>

@if (SelectReceiverType == MessageTaskSelectReceiverTypes.ManualSelection)
{
    <MessageReceiversSelect Value="SelectReceivers" Type="ChannelType" ValueChanged="SelectReceiversChanged" />
}
@if (SelectReceiverType == MessageTaskSelectReceiverTypes.BatchUpload)
{
    <MessageReceiversImport Value="ImportReceivers" MessageTemplatesId="MessageTemplatesId" ChannelType="ChannelType" ValueChanged="ImportReceiversChanged" />
}