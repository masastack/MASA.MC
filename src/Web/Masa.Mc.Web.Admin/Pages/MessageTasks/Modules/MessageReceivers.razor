@inherits AdminCompontentBase
<div class="text-subtitle2">@T("DisplayName.MessageTaskReceiver")</div>
<MRadioGroup Value="ReceiverType" ValueChanged="ReceiverTypeChanged"
             Row>
    <MRadio Label="@T("DisplayName.ReceiverType.Assign")"
            Value="@ReceiverTypes.Assign">
    </MRadio>
    <MRadio Label="@T("DisplayName.ReceiverType.Broadcast")"
            Disabled="ChannelType!=ChannelTypes.WebsiteMessage"
            Value="@ReceiverTypes.Broadcast">
    </MRadio>
</MRadioGroup>
@if (ReceiverType == ReceiverTypes.Assign)
{
    <MRow Class="mx-1 my-2">
        <ButtonGroup Value="SelectReceiverType" StyleType=StyleTypes.Slider TValue="MessageTaskSelectReceiverTypes" ValueChanged="SelectReceiverTypeChanged" />
    </MRow>
    @if (SelectReceiverType == MessageTaskSelectReceiverTypes.ManualSelection)
    {
        <MessageReceiversSelect Value="SelectReceivers" Type="ChannelType" ValueChanged="SelectReceiversChanged" />
    }
    @if (SelectReceiverType == MessageTaskSelectReceiverTypes.BatchUpload)
    {
        <MessageReceiversImport Value="ImportReceivers" MessageTemplatesId="MessageTemplatesId" ValueChanged="ImportReceiversChanged" />
    }
}