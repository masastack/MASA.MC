@inherits AdminCompontentBase
<MRow>
    <MCol>
        <MTextField Value="@MessageTemplate.DisplayName"
                    Label="@T("DisplayName.MessageTemplateTemplateId")"
                    Outlined
                    Disabled
                    HideDetails="@("auto")">
        </MTextField>
    </MCol>
</MRow>
<MRow>
    <MCol>
        <MTextField Value="@T(MessageTask.Channel.Type.ToString())"
                    Label="@T("DisplayName.ChannelType")"
                    Outlined
                    Disabled
                    HideDetails="@("auto")">
        </MTextField>
    </MCol>
</MRow>
<MRow>
    <MCol>
        <MTextField @bind-Value="MessageTask.Channel.DisplayName"
                    Label="@T("DisplayName.Channel")"
                    Outlined
                    Disabled
                    HideDetails="@("auto")">
        </MTextField>
    </MCol>
</MRow>
@if (MessageTask.Channel != null && MessageTask.Channel.Type != ChannelTypes.Sms)
{
    <MRow>
        <MCol>
            <MTextField @bind-Value="MessageTemplate.Title"
                    Label="@T("DisplayName.MessageTemplateTitle")"
                    Outlined
                    Disabled
                    HideDetails="@("auto")">
            </MTextField>
        </MCol>
    </MRow>
}
<MRow>
    <MCol>
        <MEditor @bind-Value="MessageTemplate.Content"
                 ReadOnly
                 ContentStyle="height:200px">
        </MEditor>
    </MCol>
</MRow>
@if (MessageTask.Channel != null && MessageTask.Channel.Type == ChannelTypes.WebsiteMessage)
{
    <MRow Class="mx-1 pt-6">
        <MCheckbox Class="mt-1 mr-2" @bind-Value="MessageTemplate.IsJump" Label="@T("DisplayName.MessageTemplateIsJump")"></MCheckbox>
        <MTextField @bind-Value="MessageTemplate.JumpUrl"
                Label="@T("DisplayName.MessageTemplateJumpUrl")"
                Outlined
                Disabled
                HideDetails="@("auto")">
        </MTextField>
    </MRow>
}