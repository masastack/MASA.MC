@inherits AdminCompontentBase
<MRow>
    <MCol>
        <MTextField Value="@T(MessageTask.Channel.Type.ToString())"
                    Label="@T("DisplayName.ChannelType")"
                    Outlined
                    Disabled
                    HideDetails="@("auto")">
        </MTextField>
    </MCol>
</MRow>
<MRow>
    <MCol>
        <MTextField @bind-Value="MessageTask.Channel.DisplayName"
                    Label="@T("DisplayName.Channel")"
                    Outlined
                    Disabled
                    HideDetails="@("auto")">
        </MTextField>
    </MCol>
</MRow>
@if (MessageTask.Channel.Type != ChannelTypes.Sms)
{
    <MRow>
        <MCol>
            <MTextField @bind-Value="MessageInfo.Title"
                    Label="@T("DisplayName.MessageTemplateTitle")"
                    Outlined
                    Disabled
                    HideDetails="@("auto")">
            </MTextField>
        </MCol>
    </MRow>
}
<MRow>
    <MCol>
        <RichText Value="@MessageInfo.Content"></RichText>
    </MCol>
</MRow>
@if (MessageTask.Channel.Type == ChannelTypes.WebsiteMessage)
{
    <MRow Class="mx-1 pt-6">
        <MCheckbox Class="mt-1 mr-2" @bind-Value="MessageInfo.IsJump" Label="@T("DisplayName.MessageTemplateIsJump")" Disabled></MCheckbox>
        <MTextField @bind-Value="MessageInfo.JumpUrl"
                Label="@T("DisplayName.MessageTemplateJumpUrl")"
                Outlined
                Disabled
                HideDetails="@("auto")">
        </MTextField>
    </MRow>
}