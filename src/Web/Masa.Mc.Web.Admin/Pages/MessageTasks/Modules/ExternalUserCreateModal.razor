@inherits AdminCompontentBase
<div @ref="Ref">
    <PModal @bind-Value="_visible"
            Persistent
            Title="添加外部成员"
            HideCancelAction
            Width="684"
            FormModel="_model"
            OnSave="HandleOk"
            OnCancel="HandleCancel">
        <ChildContent>
            <MTextField Outlined Label="昵称" @bind-Value="_model.DisplayName"></MTextField>
            <MTextField Outlined Label="手机号" @bind-Value="_model.PhoneNumber"></MTextField>
            <MTextField Outlined Label="邮箱" @bind-Value="_model.Email"></MTextField>
        </ChildContent>
        <SaveContent Context="save">
            <MButton OnClick="save.Click" Width=100 Class="rounded-pill" Color="primary" Style="float:right;">@(T("Submit"))</MButton>
        </SaveContent>
    </PModal>
</div>
