@inherits AdminCompontentBase
<MCard Class="d-flex flex-column" Outlined MinHeight=Height>
    <MCardTitle class="pb-1 px-0 pt-1">
        <MListItem>
            <MListItemContent class="pb-0">
                <MListItemSubtitle class="d-flex justify-space-between text-h7 neutral-lighten-1--text">@Model.DisplayName
                <MIcon Size=20 OnClick="HandleEditClick">mdi-pencil</MIcon>
                </MListItemSubtitle>
            </MListItemContent>
        </MListItem>
    </MCardTitle>
    <MCardText class="flex-grow-1" style="text-align: justified;">
       <span class="text-body3">@Model.Description</span>
    </MCardText>
    <MCardActions class="px-4 pb-4">
         <span>人数：@(Model.Items.Count)人</span>
         <MSpacer/>
         <span class="text-body2 neutral-lighten-4--text">吴自浩 编辑于 @Model.ModificationTime.Humanize() </span>
    </MCardActions>
</MCard>

@code {
    [Parameter]
    public EventCallback OnEditClick { get; set; }

    [Parameter]
    public int Height { get; set; } = 230;

    [EditorRequired]
    [Parameter]
    public ReceiverGroupDto Model { get; set; } = null!;

    private async Task HandleEditClick()
    {
        if (OnEditClick.HasDelegate)
        {
            await OnEditClick.InvokeAsync();
        }
    }
}