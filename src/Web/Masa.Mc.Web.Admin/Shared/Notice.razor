@inherits AdminCompontentBase
<MMenu OffsetX Left OffsetY>
    <ActivatorContent Context="menuContext">
        <MBadge Color="pink" Bordered Dot OffsetX="10" OffsetY="10">
            <MIcon @attributes="menuContext.Attrs" Size=24 Class="pl-2" Color="neutral-lighten-3">mdi-bell</MIcon>
        </MBadge>
    </ActivatorContent>
    <ChildContent>
        <MCard MaxWidth="400"
               Style="background-color:#4318FF">
            <MToolbar Color="blue darken-4"
                      Dark>
                <MToolbarTitle Class="font-18-medium">@T("WebsiteMessage")</MToolbarTitle>

                <MSpacer></MSpacer>

                <MButton Icon>
                    <MIcon>mdi-bell-outline</MIcon>
                </MButton>
            </MToolbar>

            <MList ThreeLine>
                @foreach (var item in _items)
                {
                    <MListItem>
                        <MListItemAvatar>
                            <MImage Src="@item.Avatar"></MImage>
                        </MListItemAvatar>

                        <MListItemContent>
                            <MListItemTitle Class="font-14-medium">@((MarkupString)item.Title)</MListItemTitle>
                            <MListItemSubtitle Class="font-12 py-1">@((MarkupString)item.ZhaiYao)</MListItemSubtitle>
                            <MListItemSubtitle Class="font-10">@((MarkupString)item.Date)</MListItemSubtitle>
                        </MListItemContent>
                    </MListItem>
                }
            </MList>
            <MList Dense>
                <MDivider Inset></MDivider>
                <MListItem Link Href="/websiteMessages/websiteMessageManagement">
                    <MListItemIcon>
                        <MIcon>mdi-keyboard-backspace</MIcon>
                    </MListItemIcon>

                    <MListItemContent>
                        <MListItemTitle Class="font-12">@T("Description.Notice.MoreTips")</MListItemTitle>
                    </MListItemContent>
                </MListItem>
            </MList>
        </MCard>
    </ChildContent>
</MMenu>

