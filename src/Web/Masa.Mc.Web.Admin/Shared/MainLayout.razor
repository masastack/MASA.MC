@inherits LayoutComponentBase
@inject GlobalConfig GlobalConfig
@inject NavigationManager Navigation

<McLayout AppId="Masa_Mc_Web" OnSignOut="SignOut"
        UserCenterRoute="/user"
        Logo="https://cdn.masastack.com/stack/images/logo/MASAStack/logo-h-en.png"
        MiniLogo="/_content/Masa.Mc.Web.Admin/img/mainLayout/logo.svg">
    @Body
</McLayout>

@code {
    private List<Nav> NavList { get; set; } = new();

    protected override Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            StateHasChanged();
        }

        return base.OnAfterRenderAsync(firstRender);
    }

    private void SignOut()
    {
        Navigation.NavigateTo("/Logout",true);
    }
}