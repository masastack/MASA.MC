<AuthorizeView>
    <Authorized>
        <MMenu OffsetX Left OffsetY>
            <ActivatorContent Context="menuContext">
                <span>Hello, @context.User.Identity?.Name!</span>
                <MButton Icon Large @attributes="menuContext.Attrs"><SIcon>mdi-account-circle-outline</SIcon></MButton>
            </ActivatorContent>
            <ChildContent>
                <MList Dense>
                    <MListItem Link>
                        <MListItemIcon>
                            <SIcon>far fa-envelope</SIcon>
                        </MListItemIcon>
                        <MListItemContent>
                            <MListItemTitle>
                                Message
                            </MListItemTitle>
                        </MListItemContent>
                    </MListItem>
                    <MListItem Link Href="/Identity/Account/Manage">
                        <MListItemIcon>
                            <SIcon>far fa-user</SIcon>
                        </MListItemIcon>
                        <MListItemContent>
                            <MListItemTitle>
                                Account
                            </MListItemTitle>
                        </MListItemContent>
                    </MListItem>
                    <MListItem Link Href="/Identity/Account/LogOut">
                        <MListItemIcon>
                            <SIcon>fas fa-sign-out-alt</SIcon>
                        </MListItemIcon>
                        <MListItemContent>
                            <MListItemTitle>
                                Sign out
                            </MListItemTitle>
                        </MListItemContent>
                    </MListItem>
                </MList>
            </ChildContent>
        </MMenu>
    </Authorized>
    <NotAuthorized>
        <MMenu OffsetX Left OffsetY>
            <ActivatorContent Context="menuContext">
                 <div class="text-center border-left-solid" style="width:88px;">
                    <MAvatar  @attributes="menuContext.Attrs" Size=40>
                        <MImage Src="/_content/Masa.Mc.Web.Admin/img/avatar/2.svg"></MImage>
                    </MAvatar>
                </div>
            </ActivatorContent>
            <ChildContent>
                <MList Dense>
                    <MListItem Link Href="/pages/authentication/login-v1">
                        <MListItemIcon Class="mr-4">
                            <SIcon Size=20 Color="neutral-lighten-4">fas fa-user-circle</SIcon>
                        </MListItemIcon>
                        <MListItemContent>
                            <MListItemTitle>
                                <span class="neutral-lighten-4--text">Login v1</span>
                            </MListItemTitle>
                        </MListItemContent>
                    </MListItem>
                    <MListItem Link Href="/pages/authentication/login-v2">
                        <MListItemIcon Class="mr-4">
                            <SIcon Size=20 Color="neutral-lighten-4">fas fa-sign-in-alt</SIcon>
                        </MListItemIcon>
                        <MListItemContent>
                            <MListItemTitle>
                                <span class="neutral-lighten-4--text">Login v2</span>
                            </MListItemTitle>
                        </MListItemContent>
                    </MListItem>
                </MList>
            </ChildContent>
        </MMenu>
    </NotAuthorized>
</AuthorizeView>

