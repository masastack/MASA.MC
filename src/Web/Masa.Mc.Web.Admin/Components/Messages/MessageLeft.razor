@inherits AdminCompontentBase
<MCard Width="576" Class="mx-auto full-height">
    <MCardTitle Class="font-24-bold neutral-text-emphasis-secondary">
        @T("Permission.WebsiteMessageManagement")
    </MCardTitle>

    <MList Subheader
           TwoLine>
        <MListItem Link>
            <MListItemAvatar Class="overflow-visible">
                <MBadge Bordered Dot Color="pink" OffsetX="10" OffsetY="10">
                    <MAvatar Color="primary">
                    </MAvatar>
                </MBadge>

            </MListItemAvatar>

            <MListItemContent>
                <MListItemTitle Class="font-16-medium neutral-text-emphasis">@T("DisplayName.AllWebsiteMessage")</MListItemTitle>
            </MListItemContent>
            <MListItemIcon>
                <MIcon>
                    mdi-menu-right
                </MIcon>
            </MListItemIcon>
        </MListItem>


        @foreach (var item in _items)
        {
            <MListItem Link>
                <MListItemAvatar Class="overflow-visible">
                    @if (item.NoReading == 0)
                    {
                        <MAvatar>
                            <MImage Src="@item.Avatar"></MImage>
                        </MAvatar>
                    }
                    else
                    {
                        <MBadge Bordered Color="pink" OffsetX="item.NoReading>99?10:16" OffsetY="item.NoReading>99?10:16" Dot="item.NoReading>99" Content="item.NoReading">
                            <MAvatar>
                                <MImage Src="@item.Avatar"></MImage>
                            </MAvatar>
                        </MBadge>
                    }
                </MListItemAvatar>

                <MListItemContent>
                    <MListItemTitle Class="py-2 font-16-medium neutral-text-emphasis">@item.Title</MListItemTitle>

                    <MListItemSubtitle Class="font-12 neutral-text-regular-secondary">@item.ZhaiYao</MListItemSubtitle>
                </MListItemContent>

                <MListItemAction>
                    <MListItemActionText Class="font-10 neutral-text-regular-secondary">@item.Date</MListItemActionText>
                </MListItemAction>
            </MListItem>
        }
    </MList>
</MCard>
