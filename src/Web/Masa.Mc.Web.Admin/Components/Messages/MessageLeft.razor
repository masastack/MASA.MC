@inherits AdminCompontentBase
<MCard Class="mx-auto full-height">
    <MCardTitle Class="font-24-bold neutral-text-emphasis-secondary pa-6">
        @T("Permission.WebsiteMessageManagement")
    </MCardTitle>

    <MList Subheader
           TwoLine>
        <MListItem Link OnClick="()=>HandleOnClick(null)" Class="pl-8">
            <MListItemAvatar Class="overflow-visible">
                @if (_channels.Any(x => !x.IsRead))
                {
                    <MBadge Bordered Dot Color="pink" OffsetX="10" OffsetY="10">
                        <MAvatar Color="primary">
                        </MAvatar>
                    </MBadge>
                }
                else
                {
                    <MAvatar Color="primary">
                    </MAvatar>
                }
            </MListItemAvatar>

            <MListItemContent>
                <MListItemTitle Class="font-16-medium neutral-text-emphasis">@T("DisplayName.AllWebsiteMessage")</MListItemTitle>
            </MListItemContent>
            <MListItemIcon>
                <MIcon>
                    mdi-menu-right
                </MIcon>
            </MListItemIcon>
        </MListItem>


        @foreach (var item in _channels)
        {
            <MListItem Link OnClick="()=>HandleOnClick(item.ChannelId)" Class="pl-8">
                <MListItemAvatar Class="overflow-visible">
                    @if (item.NoReading == 0)
                    {
                        <EmptyAvatar Value="@item.Channel?.DisplayName" />
                    }
                    else
                    {
                        <MBadge Bordered Color="pink" OffsetX="item.NoReading>99?10:16" OffsetY="item.NoReading>99?10:16" Dot="item.NoReading>99" Content="item.NoReading">
                            <EmptyAvatar Value="@item.Channel?.DisplayName" />
                        </MBadge>
                    }
                </MListItemAvatar>

                <MListItemContent>
                    <MListItemTitle Class="py-2 font-16-medium neutral-text-emphasis">@item.Channel?.DisplayName</MListItemTitle>

                    <MListItemSubtitle Class="font-12 neutral-text-regular-secondary">@item.Title</MListItemSubtitle>
                </MListItemContent>

                <MListItemAction Class="align-self-start">
                    <MListItemActionText Class="font-10 neutral-text-regular-secondary">@item.SendTime.Humanize(culture:new CultureInfo(I18n.CurrentLanguage))</MListItemActionText>
                </MListItemAction>
            </MListItem>
        }
    </MList>
</MCard>