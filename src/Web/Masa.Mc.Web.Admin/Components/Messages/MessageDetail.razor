@inherits AdminCompontentBase
<MCard Class="full-height">
    <MCardTitle>
        <div class="d-flex full-width align-center" style="height: 40px !important;">
            <div class="d-flex button rounded-circle" @onclick="HandleOnBack">
                <MIcon Class="ma-auto" Color="neutral-lighten-1" Size=20>
                    mdi-arrow-left
                </MIcon>
            </div>
            <div class="ml-4" style="width: 0px;height:24px;border: 1px solid #E2E7F4;"></div>
            <MListItem>
                <MListItemAvatar Class="overflow-visible">
                    <EmptyAvatar Value="@_entity.Channel?.DisplayName" />
                </MListItemAvatar>

                <MListItemContent>
                    <MListItemTitle Class="h7 emphasis--text">@_entity.Channel?.DisplayName</MListItemTitle>
                </MListItemContent>
            </MListItem>
            <MSpacer />

            <MIcon Class="mr-2" Color="neutral-lighten-1" Size=20 OnClick="HandleDelAsync">
                mdi-delete-outline
            </MIcon>
        </div>
    </MCardTitle>
    <MCardText Class="d-flex align-end flex-column" Style="height: calc(100% - 72px) !important">
        <div class="detail-box pt-4">
            <span class="h7 emphasis2--text">@_entity.Title</span>
            <div class="body2 regular2--text pt-2">
                <span>@_entity.SendTime.ToString(T("$DateTimeFormat"))</span>
            </div>
            <div class="content body regular2--text">
                @((MarkupString)_entity.Content)
            </div>
        </div>
        <div class="mt-auto">
            <span @onclick="()=>HandlePrevAndNext(_entity.PrevId)">
                <MIcon Class="hover-pointer" Disabled="_entity.PrevId==default" Size=24>mdi-chevron-left</MIcon>
            </span>
            <span @onclick="()=>HandlePrevAndNext(_entity.NextId)">
                <MIcon Class="hover-pointer" Disabled="_entity.NextId==default" Size=24>mdi-chevron-right</MIcon>
            </span>
        </div>
    </MCardText>
</MCard>