@switch (Value)
{
    case MessageTaskHistoryStatuses.WaitSend:
        <MIcon Size=@Size
       Dark
       Color="emphasis2">
            mdi-clock-outline
        </MIcon>
        break;
    case MessageTaskHistoryStatuses.Sending:
        <MIcon Size=@Size
       Dark
       Color="regular3">
            mdi-dots-horizontal-circle-outline
        </MIcon>
        break;
    case MessageTaskHistoryStatuses.Withdrawn:
        <MIcon Size=@Size
       Dark
       Color="emphasis2">
            mdi-keyboard-return
        </MIcon>
        break;
    case MessageTaskHistoryStatuses.Success:
        <MIcon Size=@Size
       Dark
       Color="success">
            mdi-check-circle-outline
        </MIcon>
        break;
    case MessageTaskHistoryStatuses.Fail:
        <MIcon Size=@Size
       Dark
       Color="error">
            mdi-close-circle-outline
        </MIcon>
        break;
    case MessageTaskHistoryStatuses.PartialFailure:
        <MIcon Size=@Size
       Dark
       Color="error">
            mdi-minus-circle-outline
        </MIcon>
        break;
}

@code {
    [Parameter]
    public MessageTaskHistoryStatuses Value { get; set; }

    [Parameter]
    public StringNumber Size { get; set; }
}
