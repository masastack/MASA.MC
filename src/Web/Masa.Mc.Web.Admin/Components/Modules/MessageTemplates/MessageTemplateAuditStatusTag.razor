@inherits AdminCompontentBase
@switch (Value)
{
    case MessageTemplateAuditStatuses.WaitAudit:
        <span class="yellow-lighten yellow--text btn tag">@T("DisplayName.MessageTemplateAuditStatus.WaitAudit")</span>
        break;
    case MessageTemplateAuditStatuses.Adopt:
        <span class="green-lighten green--text btn tag">@T("DisplayName.MessageTemplateAuditStatus.Adopt")</span>
        break;
    case MessageTemplateAuditStatuses.Fail:
        <span class="warning-lighten warning--text btn tag">@T("DisplayName.MessageTemplateAuditStatus.Fail")</span>
        break;
}

@code {
    [Parameter]
    public MessageTemplateAuditStatuses Value { get; set; }
}
