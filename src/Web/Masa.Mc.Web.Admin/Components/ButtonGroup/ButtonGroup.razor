@inherits AdminCompontentBase
@typeparam TValue

@if (StyleType == StyleTypes.Toggle)
{
    <MButtonGroup Class="@Class" Value="Value.ToString()" Rounded>
        @foreach (var (key, value) in KeyValues)
        {
            <MButton OnClick="async() => await ValueChanged.InvokeAsync(value)" Width=100 Value="@value.ToString()" Class="@(Value.Equals(value) ? "button-group-active":"button-group")">
                <SIcon Size=18>fa fa-regular fa-mars</SIcon>
                <span class="ml-1">@T(key)</span>
            </MButton>
        }
    </MButtonGroup>
}
else
{
    <MButtonGroup Value="Value.ToString()" Class="rounded-lg elevation-tab" Dense Mandatory Borderless>
        @foreach (var (key, value) in KeyValues)
        {
            <MButton OnClick="async() => await ValueChanged.InvokeAsync(value)" Value="@value.ToString()" Ripple=false Class="rounded-lg" MinWidth=100>
                @T(key)
            </MButton>
        }
    </MButtonGroup>
}
